# Environment Configuration Template
# Copy this file to .env and fill in your values

# ===================
# Database
# ===================
# For local development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./candlelight.db

# For production (Neon PostgreSQL) - uncomment and update
# DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx.us-east-2.aws.neon.tech/candlelight?sslmode=require

# ===================
# Authentication
# ===================
JWT_SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===================
# AI/ML Services
# ===================
# OpenAI (optional - leave empty for demo mode)
OPENAI_API_KEY=

# Google Gemini (optional - free tier available)
GOOGLE_AI_API_KEY=

# AI Provider: "inhouse", "openai", "gemini", "anthropic", "openrouter", or "demo"
AI_PROVIDER=inhouse
# Prefer in-house ML before external APIs when an external provider is selected
AI_INHOUSE_FIRST=true

# ===================
# Storage
# ===================
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# S3 (for production - optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=

# ===================
# Server
# ===================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# ===================
# CORS
# ===================
CORS_ORIGINS=["http://localhost:8080","http://localhost:3000","http://127.0.0.1:8080"]
